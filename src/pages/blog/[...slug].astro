---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PostCard from '../../components/PostCard.astro';

// 1. Astro генерирует пути для всех статей
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(post => post.slug !== entry.slug)
  .filter(post => post.data.category === entry.data.category)
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);
---

<MainLayout
    title={`${entry.data.title} | Celestea`}
    description={entry.data.description}
    image={entry.data.image}
    type="article"
    pubDate={new Date(entry.data.pubDate)}
>
    <Header/>
        <article class="prose lg:prose-xl mx-auto py-10 article-content">
            <div class="container container-sm">
                <h1>{entry.data.title}</h1>
                {entry.data.image && <img src={entry.data.image} alt={entry.data.title} class="rounded-lg shadow-md my-6" />}
                
                <Content />

                <div class="article-author">
                    <p>Автор: <a href="/author">Астрея</a></p>
                </div>
            </div>
        </article>

        {relatedPosts.length > 0 && (
          <section class="py-10">
            <div class="container">
              <h2 class="text-2xl font-bold text-center mb-8">Вам может понравиться</h2>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-8">
                {relatedPosts.map(post => (
                  <PostCard post={post} />
                ))}
              </div>
            </div>
          </section>
        )}

  <Footer/>
</MainLayout>